# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Description of what the lane does"
  
  lane :run_test do
    scan(scheme: "CodeCoverageExample",
         code_coverage: true,
        clean: true,
        derived_data_path: "../testOutput/",
        skip_build: true
        )
  end

  lane :slather_run do
    slather(build_directory: "../testOutput/",
      scheme: "CodeCoverageExample",
      proj: "CodeCoverageExample.xcodeproj",
      output_directory: "../testOutput/slatherOutput", 
      cobertura_xml: true,
      ignore: ["Pods/*", "ThirdParty/*", â€œFrameworks/*"]
   )
  end
end
